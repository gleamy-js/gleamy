{
  "collectCoverageFrom": [
    "**/*.{ts, js, jsx}",
    "!**/node_modules/**",
    "!**/vendor/**",
    "!**/coverage/**",
    "!**/reports/**",
    "!**/dist/**",
    "!**/.next/**"
  ],
  "coverageReporters": [
    "clover",
    "json",
    "html",
    [
      "text",
      {
        "skipFull": true
      }
    ]
  ],
  "verbose": true,
  "coverageDirectory": "<rootDir>/reports/jest",
  "extensionsToTreatAsEsm": [
    ".ts",
    ".tsx",
    ".jsx"
  ],
  "transform": {
    "^.+\\.tsx?$": [
      "ts-jest",
      {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    ]
  },
  "testEnvironment": "node",
  "rootDir": "./",
  "roots": [
    "<rootDir>/packages/"
  ]
}