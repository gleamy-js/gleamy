{
  "name": "gleamy",
  "description": "Create a reactive shiny background in different materials",
  "version": "1.0.0",
  "license": "GNU GPLv3",
  "private": false,
  "author": {
    "name": "Jordy Houtman",
    "url": "http://www.spacecorp.nl/"
  },
  "bugs": {
    "url": "https://github.com/gleamy-js/gleamy/issues"
  },
  "homepage": "https://www.gleamy.dev/",
  "main": "dist/cjs/index.js",
  "type": "module",
  "types": "dist/cjs/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">16.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleamy-js/gleamy.git"
  },
  "keywords": [
    "react",
    "javascript",
    "design-library",
    "component-library",
    "component",
    "library",
    "canvas",
    "svg",
    "gradient",
    "foil"
  ],
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "coverage/*.ts",
      "coverage-ts/*.ts",
      "webpack.config.ts"
    ],
    "project": "./tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "dependencies": {
    "color": "4.2.3"
  },
  "scripts": {
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "start": "yarn install && react-scripts start",
    "pre:build": "yarn audit",
    "build": "rollup -c --bundleConfigAsCjs --makeAbsoluteExternalsRelative",
    "test": "react-scripts test",
    "prettier": "prettier --write .",
    "yalc:start": "tsc-watch --onSuccess \"yalc push\"",
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src/**/*.tsx --fix",
    "ts-coverage": "typescript-coverage-report",
    "test:coverage": "react-scripts test --env=jsdom --watchAll=false --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "4.9.5"
  },
  "devDependencies": {
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/color": "^3.0.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "canvas": "^2.11.0",
    "color": "4.2.3",
    "eslint": "8.33.0",
    "eslint-config-pretty-strict": "8.1.2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^39.8.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "pinst": "^3.0.0",
    "prettier": "2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "rollup": "^3.14.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-dts": "^5.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-uglify": "^6.0.4",
    "styled-components": "^5.3.6",
    "tsc-watch": "^6.0.0",
    "tslib": "^2.5.0",
    "typescript": "4.9.5",
    "typescript-coverage-report": "^0.7.0",
    "typescript-plugin-styled-components": "^2.0.0",
    "web-vitals": "3.1.1",
    "yalc": "^1.0.0-pre.53"
  },
  "lint-staged": {
    "*.js, *.ts, *.tsx, *.json, *.svg, *.html, *.css": [
      "prettier --write",
      "lint",
      "git add",
      "test"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "text"
    ]
  }
}
