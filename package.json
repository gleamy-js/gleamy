{
  "name": "react-gleamy",
  "description": "Create a reactive shiney background in different materials",
  "version": "0.1.0",
  "license": "MPL-2.0",
  "private": true,
  "homepage": "https://www.gleamy.dev/",
  "funding": "https://www.gleamy.dev/about/funding",
  "main": "src/index.ts",
  "engines": {
    "node": ""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gitaarwerk/react-gleamy.git"
  },
  "keywords": [
    "react",
    "component",
    "library",
    "canvas",
    "svg"
  ],
  "types": "types/index.d.ts",
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "coverage/*.ts",
      "coverage-ts/*.ts",
      "webpack.config.ts"
    ],
    "project": "tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "scripts": {
    "start": "yarn install && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write .",
    "prepare": "husky install",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src/**/*.tsx --fix",
    "ts-coverage": "typescript-coverage-report",
    "test:coverage": "react-scripts test --env=jsdom --watchAll=false --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges"
  },
  "dependencies": {
    "color": "^4.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.5",
    "web-vitals": "^3.1.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/color": "^3.0.3",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "8.33.0",
    "eslint-config-pretty-strict": "8.1.2",
    "eslint-plugin-jsdoc": "^39.8.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^8.0.0",
    "prettier": "2.8.4",
    "styled-components": "^5.3.6",
    "typescript-coverage-report": "^0.7.0",
    "typescript-plugin-styled-components": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "json",
      "text"
    ]
  }
}
