{
  "name": "gleamy",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo dev",
    "build": "turbo run build",
    "pack:package": "turbo run pack:package",
    "publish:package": "turbo run publish:package",
    "dry-run": "turbo run dry-run",
    "prettier": "prettier --config .prettierrc.json './**/*.{ts,tsx,js,json}' --write",
    "test": "turbo run test",
    "test:watch": "pnpm test --watch",
    "lint": "turbo run lint"
  },
  "engines": {
    "node": ">=22.11.0",
    "pnpm": ">=9.5.0"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "turbo": "2.2.3"
  },
  "overrides": {
    "cross-spawn@7.0.3": "^7.0.6",
    "micromatch@4.0.7": "^4.0.8",
    "@eslint/plugin-kit": "0.2.3"
  }
}
