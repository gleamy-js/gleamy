{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "dist/**", "build/**"]
    },
    "test": {
      "cache": false
    },
    "lint": {
      "cache": false
    },
    "pack:package": {
      "cache": false,
      "dependsOn": ["^build"]
    },
    "dry-run": {
      "dependsOn": ["^build", "^dry-run"],
      "cache": false
    },
    "publish:package": {
      "dependsOn": ["^build", "^publish:package"],
      "cache": false
    }
  }
}
