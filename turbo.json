{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "outputs": [
                "./dist/**"
            ]
        },
        "test": {
            "cache": false
        },
        "lint": {
            "cache": false
        },
        "publish:package": {
            "dependsOn": [
                "^build",
                "^publish:package"
            ],
            "cache": false
        }
    }
}