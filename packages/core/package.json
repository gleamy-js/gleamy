{
  "name": "@gleamy/core",
  "description": "Core functionality of Gleamy",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  
  "author": {
    "name": "Jordy Houtman",
    "url": "http://www.spacecorp.nl/"
  },
  "homepage": "https://www.gleamy.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleamy-js/gleamy.git"
  },
  "bugs": {
    "url": "https://github.com/gleamy-js/gleamy/issues"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.cts",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "color": "4.2.3",
    "@gleamy/types": "workspace:*"
  },
  "scripts": {
    "dev": "tsup --watch src/index.ts --config tsup.config.dev.ts --tsconfig tsconfig.json",
    "build": "tsup src/index.ts --config tsup.config.prod.ts --tsconfig tsconfig.json",
    "lintr": "eslint -c .eslintrc.json --fix .",
    "test": "jest"
  },
  "peerDependencies": {
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/color": "^4.2.0",
    "tslib": "^2.8.1",
    "gleamy-typescript-config": "workspace:*",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "husky": "^9.1.7",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "typescript": "5.6.3",
    "typescript-plugin-styled-components": "^3.0.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.13.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-workspaces": "^0.10.1",
    "tsup": "^8.3.5"
  },
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "./scripts/*",
      "./reports/**/*.ts"
    ],
    "project": "./tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=22.11.0"
  }
}
