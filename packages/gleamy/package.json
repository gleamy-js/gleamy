{
  "name": "gleamy",
  "description": "Create a reactive shiny element in different materials",
  "version": "2.0.12",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "author": {
    "name": "Jordy Houtman",
    "url": "http://www.spacecorp.nl/"
  },
  "homepage": "https://www.gleamy.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleamy-js/gleamy.git"
  },
  "bugs": {
    "url": "https://github.com/gleamy-js/gleamy/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      "import": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "require": "./dist/index.cjs"
      }
    },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "SECURITY.md",
    "FUNDING.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "readme-assets"
  ],
  "keywords": [
    "react",
    "javascript",
    "component-library",
    "library",
    "canvas",
    "svg",
    "gradient",
    "special-effects"
  ],
  "dependencies": {
    "color": "4.2.3",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.12",
    "@types/color": "^4.2.0",
    "tslib": "^2.8.1"
  },
  "scripts": {
    "dev": "tsup src/index.ts --config tsup.config.dev.ts --tsconfig tsconfig.json",
    "build": "tsup src/index.ts --config tsup.config.prod.ts --tsconfig tsconfig.json",
    "lintr": "eslint -c .eslintrc.json --fix .",
    "test": "jest",
    "prepack": "node ./scripts/prepare.cjs",
    "postpack": "node ./scripts/postpack.cjs",
    "pack:package": "pnpm build && pnpm pack",
    "publish:package": "pnpm publish --no-git-checks --access=public",
    "dry-run": "pnpm publish --dry-run --no-git-checks --access=public"
  },
  "peerDependencies": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "typescript": "5.6.3"
  },
  "devDependencies": {
    "gleamy-typescript-config": "workspace:*",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.24.4",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "styled-components": "^6.1.13",
    "ts-jest": "^29.2.5",
    "typescript": "5.6.3",
    "typescript-plugin-styled-components": "^3.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.12.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-workspaces": "^0.10.1",
    "tsup": "^8.3.5"
  },
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "./scripts/*",
      "./reports/**/*.ts"
    ],
    "project": "./tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=22.11.0"
  }
}