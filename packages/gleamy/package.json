{
  "name": "gleamy",
  "description": "Create a reactive shiny element in different materials",
  "version": "1.2.0",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "author": {
    "name": "Jordy Houtman",
    "url": "http://www.spacecorp.nl/"
  },
  "bugs": {
    "url": "https://github.com/gleamy-js/gleamy/issues"
  },
  "homepage": "https://www.gleamy.dev/",
  "main": "dist/cjs/index.js",
  "type": "module",
  "types": "dist/cjs/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/esm/index.js",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "SECURITY.md",
    "FUNDING.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "readme-assets",
    "reports"
  ],
  "engines": {
    "node": ">16.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleamy-js/gleamy.git"
  },
  "keywords": [
    "react",
    "javascript",
    "component-library",
    "library",
    "canvas",
    "svg",
    "gradient",
    "special-effects"
  ],
  "dependencies": {
    "color": "4.2.3"
  },
  "scripts": {
    "build:gleamy": "rollup -c --bundleConfigAsCjs --makeAbsoluteExternalsRelative",
    "lint": "eslint -c .eslintrc.cjs --ext .ts ./src/**/*.tsx --fix",
    "prepack": "node ./scripts/prepare.cjs",
    "postpack": "node ./scripts/postpack.cjs",
    "publish:gleamy": "npm pack --access=public --allow-same-version --no-git-tag-version"
  },
  "peerDependencies": {
    "@types/node": "^16.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-eslint": "^9.0.4",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/color": "^3.0.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^16.4.0",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "pinst": "^3.0.0",
    "prettier": "2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^3.23.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-serve": "^2.0.2",
    "rollup-plugin-visualizer": "^5.9.2",
    "styled-components": "^5.3.6",
    "ts-jest": "^29.1.0",
    "tsc-watch": "^6.0.4",
    "typescript": "5.1.3",
    "typescript-plugin-styled-components": "^3.0.0"
  },
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "./scripts/*",
      "./reports/**/*.ts"
    ],
    "project": "./tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
