{
  "name": "gleamy",
  "description": "Create a reactive shiny element in different materials",
  "version": "2.0.2",
  "license": "MIT",
  "private": false,
  "sideEffects": false,
  "author": {
    "name": "Jordy Houtman",
    "url": "http://www.spacecorp.nl/"
  },
  "bugs": {
    "url": "https://github.com/gleamy-js/gleamy/issues"
  },
  "homepage": "https://www.gleamy.dev/",
  "main": "dist/cjs/index.cjs",
  "types": "dist/cjs/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "dist/esm/index.mjs",
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "SECURITY.md",
    "FUNDING.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md",
    "readme-assets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gleamy-js/gleamy.git"
  },
  "keywords": [
    "react",
    "javascript",
    "component-library",
    "library",
    "canvas",
    "svg",
    "gradient",
    "special-effects"
  ],
  "dependencies": {
    "color": "4.2.3",
    "@types/node": "^20.12.1",
    "@types/react": "^18.2.73",
    "@types/color": "^3.0.6",
    "tslib": "^2.6.2"
  },
  "scripts": {
    "dev": "rollup -c rollup.dev.js --watch --bundleConfigAsCjs",
    "build": "rollup -c rollup.config.js --bundleConfigAsCjs --makeAbsoluteExternalsRelative",
    "lint": "eslint -c .eslintrc.json --fix . --ext .ts,.tsx,.js",
    "test": "jest",
    "prepack": "node ./scripts/prepare.cjs",
    "postpack": "node ./scripts/postpack.cjs",
    "publish:package": "pnpm publish --no-git-checks --access=public"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-eslint": "^9.0.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/react": "^14.2.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/styled-components": "^5.1.34",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.13.0",
    "rollup-plugin-cleaner": "^1.0.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "styled-components": "^6.1.8",
    "ts-jest": "^29.1.2",
    "typescript": "5.4.3",
    "typescript-plugin-styled-components": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-security": "^2.1.1",
    "eslint-plugin-workspaces": "^0.10.0"
  },
  "typeCoverage": {
    "atLeast": 99,
    "strict": true,
    "detail": true,
    "ignoreFiles": [
      "./scripts/*",
      "./reports/**/*.ts"
    ],
    "project": "./tsconfig.json",
    "update": true,
    "reportSemanticError": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=20.12.0",
    "pnpm": ">=8.15.6"
  }
}